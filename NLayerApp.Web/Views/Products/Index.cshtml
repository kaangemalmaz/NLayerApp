@model List<ProductWithCategoryDto>


<a asp-controller="Products" asp-action="Save" class="btn btn-primary">Add</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Category</td>
            <td>CreatedTime</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>@product.Category.Name</td>
                <td>@product.CreatedTime</td>
                <td>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
